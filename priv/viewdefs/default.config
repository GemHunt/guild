%%-*-erlang-*-
{navbar,
 [
  {link,
   [{label, "Train"},
    {icon,  "dashboard"},
    {view,  "train"}
   ]},
  {link,
   [{label, "Evaluate"},
    {icon,  "tasks"},
    {view,  "evaluate"}
   ]},
  {link,
   [{label, "Serve"},
    {icon,  "cloud-upload"},
    {view,  "serve"}
   ]}
 ]}.

{view, "train",
 [{row,
   [{col, [{class, "col-md-12"}],
     [{widget, "page-header", [runs_select]}]}
   ]},
  {row,
   [{col, [{class, "col-md-9"}],
     [{row,
       [
        {% for field in fields %}
        {% if not forloop.first %},{% endif %}
        {col, [{class, "col-md-3 col-sm-6"}],
         [{widget, "value-panel",
           [{color,   "{{field.color|default:'grey'}}"},
            {icon,    "{{field.icon}}"},
            {caption, "{{field.caption|default:field.name}}"},
            {source,  "{{field.source}}"},
            {reduce,  "{{field.reduce}}"},
            {format,  "{{field.format}}"}
           ]}
         ]}
         {% endfor %}
       ]
      }
      {% if series_a %}
      ,{row,
       [
        {% for series in series_a %}
        {% if not forloop.first %},{% endif %}
        {col, [{class, "{{series.colclass|default:'col-md-12'}}"}],
         [{widget, "timeseries",
           [{title, "{{series.title|default:series.name}}"},
            {label, "{{series.label}}"},
            {format, "{{series.format}}"},
            {source, "{{series.source}}"}
           ]}
         ]}
        {% endfor %}
       ]}
      {% endif %}
      {% if series_b %}
      ,{row,
       [
        {% for series in series_b %}
        {% if not forloop.first %},{% endif %}
        {col, [{class, "{{series.colclass|default:'col-md-6'}}"}],
         [{widget, "timeseries",
           [{title, "{{series.title|default:series.name}}"},
            {label, "{{series.label}}"},
            {format, "{{series.format}}"},
            {source, "{{series.source}}"}
           ]}
         ]}
        {% endfor %}
       ]}
      {% endif %}
      ,{row,
       [{col, [{class, "col-md-12"}],
         [{widget, "output", []}
         ]}
       ]}
     ]},
    {col, [{class, "col-md-3"}],
     [{widget, "status", []},
      {widget, "flags", []}
     ]}
   ]}
 ]}.

{view, "evaluate",
 [{row,
   [{col, [{class, "col-md-12"}],
     [{widget, "page-header", []}]}
   ]},
  {row,
   [{col, [{class, "col-md-12"}],
     [{widget, "compare-table",
       [{columns,
         [
          [{title, "Test Accuracy"},
           {source, "series/tf/test/accuracy"},
           {reduce, "last"},
           {format, "0.00%"}],

          [{title, "Train Accuracy"},
           {source, "series/tf/train/accuracy"},
           {reduce, "last"},
           {format, "0.00%"}],

          [{title, "Time"},
           {source, "series/tf/train/accuracy"},
           {reduce, "duration"},
           {format, "00:00:00"}],

          [{title, "Learning Rate"},
           {source, "flags"},
           {attribute, "learning_rate"}],

          [{title, "Steps"},
           {source, "series/tf/train/accuracy"},
           {reduce, "steps0"}],

          [{title, "Max Steps"},
           {source, "flags"},
           {attribute, "max_steps"}],

          [{title, "Dropout"},
           {source, "flags"},
           {attribute, "dropout"}]
         ]}
       ]}
     ]}
   ]}
 ]}.

{view, "serve", []}.
 %% [{row,
 %%   [{col, [{class, "col-md-12"}],
 %%     [{widget, "page-header", []}]}
 %%   ]}]}.
